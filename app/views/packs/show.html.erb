<% provide :title, @pack.name %>
<p id="notice"><%= notice %></p>

<h1><%= @pack.name %></h1>
<p>
  <% @pack.contributor_relations.each do |contrib| %>
    <%= contrib.full_text %><br/>
  <% end %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= link_to @pack.publisher.name, @pack.publisher %>
</p>

<p>
  <strong>Serial:</strong>
  <%= @pack.serial %>
</p>

<p>
  <strong>Songs:</strong>
  <ul>
    <% @pack.songs.each do |song| %>
      <li><%= link_to song, song %></li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_pack_path(@pack) %> |
<%= link_to 'Back', packs_path %>
