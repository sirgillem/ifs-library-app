<% provide :title, 'Song Templates' %>

<h1>Song Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @song_templates.each do |song_template| %>
      <tr>
        <td><%= song_template.name %></td>
        <%= render 'shared/index_actions', resource: song_template %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song template', new_song_template_path %>
