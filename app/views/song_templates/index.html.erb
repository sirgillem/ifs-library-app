<p id="notice"><%= notice %></p>

<h1>Listing Song Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @song_templates.each do |song_template| %>
      <tr>
        <td><%= song_template.name %></td>
        <td><%= link_to 'Show', song_template %></td>
        <td><%= link_to 'Edit', edit_song_template_path(song_template) %></td>
        <td><%= link_to 'Destroy', song_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

