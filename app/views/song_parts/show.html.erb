<% provide :title, @song_part %>

<% if @song_part.song %>
  <p>
    <strong>Song:</strong>
    <%= link_to @song_part.song, @song_part.song %>
  </p>
<% else %>
  <p>
    <strong>Template:</strong>
    <%= link_to @song_part.song_template, @song_part.song_template %>
  </p>
<% end %>

<p>
  <strong>Part:</strong>
  <%= @song_part.name %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @song_part.notes %>
</p>

<p>
  <strong>Scanned:</strong>
  <%= @song_part.scanned %>
</p>

<p>
  <strong>Instruments:</strong>
  <%= @song_part.instrument_sig %>
</p>

<%= link_to 'Edit', edit_song_part_path(@song_part) %> |
<%= link_to 'Back', song_parts_path %>
