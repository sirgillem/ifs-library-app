<% provide :title, 'Edit publisher' %>
<h1> Edit <%= @publisher.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @publisher, url: {action: 'update'} do |f| %>
      <%= render 'devise/shared/error_messages', resource: @publisher %>

      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :website %><br/>
        <%= f.text_field :website %>
      </div> 

      <%= f.submit 'Update' %>
    <% end %>
  </div>
</div>
