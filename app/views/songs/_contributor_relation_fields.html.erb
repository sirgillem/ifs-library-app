<div class="nested-fields">
  <%= f.hidden_field :_destroy %>
  <div>
    <%= f.label :person_id %>
    <%= f.select :person_id, Person.all.collect { |p| [ p.full_name, p.id] },
                             { include_blank: true } %>
  </div>
  <div>
    <%= f.label :role %>
    <%= f.text_field :role %>
  </div>
  <div>
    <%= f.label :sequence %>
    <%= f.number_field :sequence %>
  </div>
  <div>
    <%= link_to "Remove", '#', class: 'remove_fields' %>
  </div>
</div>
