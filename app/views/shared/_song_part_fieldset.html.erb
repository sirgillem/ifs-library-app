<fieldset>
  <legend>Parts:</legend>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Instruments</th>
        <th>Notes</th>
        <th>Scanned</th>
        <th>Order</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :song_parts, f.object.song_parts.sort_by(&:sequence) do |parts_form| %>
        <%= render 'shared/song_part_fields', f: parts_form %>
      <% end %>
      <tr class="add_fields_container">
        <td><%= link_to_add_fields "Add Part", f, :song_parts, 'shared' %></td>
      </tr>
    </tbody>
  </table>
</fieldset>
