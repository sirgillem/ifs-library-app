<% provide :title, 'All People' %>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th class="sortable">Name</th>
      <th class="sortable">Contributions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.sort_name %></td>
        <td><%= person.contributor_relations.count %></td>
        <%= render 'shared/index_actions', resource: person %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %>
